%h2.page-header Offices
= link "New Office", to: admin_office_path(@conn, :new), class: "btn btn-primary pull-right"
#offices
  .table-responsive
    %table.table.table-condensed.table-hover.table-striped
      %thead
        %tr.row
          %th.col-xs-9 Name
          %th.col-xs-3 &nbsp;
      %tbody.list
        - for office <- @offices do
          %tr.row
            %td.col-xs-9.title
              = link office.name, to: admin_office_path(@conn, :show, office)
            %td.col-xs-3.text-right.actions
              = link "Edit", to: admin_office_path(@conn, :edit, office), class: "btn btn-default btn-xs"
              &nbsp;
              = link "Delete", to: admin_office_path(@conn, :delete, office), method: :delete, class: "btn btn-danger btn-xs"
= link "New Office", to: admin_office_path(@conn, :new), class: "btn btn-primary pull-right"
