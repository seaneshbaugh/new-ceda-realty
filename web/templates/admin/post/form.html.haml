= form_for @changeset, @action, fn f ->
  - if f.errors != [] do
    .alert.alert-danger
      %p Oops, something went wrong! Please check the errors below:
      %ul
        - for {attr, message} <- f.errors do
          %li= humanize(attr) <> " " <> message
  .form-group
    %label{ for: "post[title]" }
      Title
    = text_input f, :title, class: "form-control"
  .form-group
    %label{ for: "post[body]" }
      Body
    = textarea f, :body, class: "form-control"
  .form-group
    %label{ for: "post[style]" }
      Style
    = textarea f, :style, class: "form-control"
  .form-group
    %label{ for: "post[script]" }
      Script
    = textarea f, :script, class: "form-control"
  .form-group
    %label{ for: "post[meta_description]" }
      Meta Description
    = text_input f, :meta_description, class: "form-control"
  .checkbox
    %label{ for: "post[published]" }
      = checkbox f, :published
      &nbsp; Published
  .form-group
    = submit "Submit", class: "btn btn-primary"
    &nbsp;
    = link "Cancel", to: admin_post_path(@conn, :index), class: "btn btn-default"
- end
