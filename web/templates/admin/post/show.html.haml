%h2.page-heading= @post.title
#post
  .row.post-title
    .col-xs-12.col-sm-2
      %strong Title:
    .col-xs-12.col-sm-10
      = @post.title
  .row.post-slug
    .col-xs-12.col-sm-2
      %strong Slug:
    .col-xs-12.col-sm-10
      = @post.slug
  .row.post-full-path
    .col-xs-12.col-sm-2
      %strong Full Path:
    .col-xs-12.col-sm-10
      = @post.full_path
  .row.post-body
    .col-xs-12.col-sm-2
      %strong Body:
    .col-xs-12.col-sm-10
      %pre
        = @post.body
  .row.post-style
    .col-xs-12.col-sm-2
      %strong Style:
    .col-xs-12.col-sm-10
      %pre
        = @post.style
  .row.post-script
    .col-xs-12.col-sm-2
      %strong Script:
    .col-xs-12.col-sm-10
      %pre
        = @post.script
  .row.post-meta-description
    .col-xs-12.col-sm-2
      %strong Meta Description:
    .col-xs-12.col-sm-10
      = @post.meta_description
  .row.post-published
    .col-xs-12.col-sm-2
      %strong Published:
    .col-xs-12.col-sm-10
      = published(@post)
  .row.post-inserted-at
    .col-xs-12.col-sm-2
      %strong Inserted At:
    .col-xs-12.col-sm-10
      = @post.inserted_at
  .row.post-updated-at
    .col-xs-12.col-sm-2
      %strong Updated At:
    .col-xs-12.col-sm-10
      = @post.updated_at
  .action-buttons-container
    = link "Edit", to: admin_post_path(@conn, :edit, @post), class: "btn btn-primary"
    &nbsp;
    = link "Delete", to: admin_post_path(@conn, :delete, @post), method: :delete, class: "btn btn-danger"
