%h2.post-header Posts
= link "New Post", to: admin_post_path(@conn, :new), class: "btn btn-primary pull-right"
#posts
  .table-responsive
    %table.table.table-condensed.table-hover.table-striped
      %thead
        %tr.row
          %th.col-xs-9 Title
          %th.col-xs-3 &nbsp;
      %tbody.list
        - for post <- @posts do
          %tr.row
            %td.col-xs-9.title
              = link post.title, to: admin_post_path(@conn, :show, post)
            %td.col-xs-3.text-right.actions
              = link "Edit", to: admin_post_path(@conn, :edit, post), class: "btn btn-default btn-xs"
              &nbsp;
              = link "Delete", to: admin_post_path(@conn, :delete, post), method: :delete, class: "btn btn-danger btn-xs"
= link "New Post", to: admin_post_path(@conn, :new), class: "btn btn-primary pull-right"
